<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?> 
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.collections.*?>
<?import javafx.scene.paint.*?>


<GridPane 
	id="GridPaneKundenForm" 
	prefHeight="600.0"
	prefWidth=" 800.0"
	xmlns:fx="http://javafx.com/fxml/1"
	hgap="10"
	vgap="10"
	fx:controller="demoproject.Formular.KundenController">
	<stylesheets>
		<URL value="@../css/form.css"/>
	</stylesheets>
        
	<Button fx:id="saveButton" 
			GridPane.columnIndex="1" 
			GridPane.rowIndex="13"
			text="Speichern" 
			onAction="#handleSubmitButtonAction"/>
	<Label GridPane.columnIndex="0"
		   GridPane.rowIndex="1"
		   text="Kundenname"
		   styleClass="formLabel"/> 
	<TextField fx:id="newKunde"
			   GridPane.columnIndex="1"
			   GridPane.rowIndex="1" 
			   editable="true" 
			   layoutX="300.0" layoutY="22.0" minWidth="300.0"
			   promptText="Firmen/Kundenname"/>
	<Label GridPane.columnIndex="0"
		   GridPane.rowIndex="2"
		   text="Name"
		   styleClass="formLabel"/>  
	<TextField id="txtName" fx:id="txtName"
			   GridPane.columnIndex="1" 
			   GridPane.rowIndex="2"
			   promptText="Name"/>
	<Label GridPane.columnIndex="0"
		   GridPane.rowIndex="3"
		   text="Vorname"
		   styleClass="formLabel"/> 		  
	<TextField fx:id="txtVorname"
			   GridPane.columnIndex="1"
			   GridPane.rowIndex="3" 
			   promptText="Vorname"/>
	<Label GridPane.columnIndex="0"
		   GridPane.rowIndex="4"
		   text="Strasse"
		   styleClass="formLabel"/> 		  
	<TextField fx:id="txtStrasse"
			   GridPane.columnIndex="1"
			   GridPane.rowIndex="4" 
			   promptText="Strasse"/>
	<Label GridPane.columnIndex="0"
		   GridPane.rowIndex="5"
		   text="Hausnummer"
		   styleClass="formLabel"/> 		  
	<TextField fx:id="txtHausnummer"
			   GridPane.columnIndex="1"
			   GridPane.rowIndex="5" 
			   promptText="Hausnummer"/>
	<Label GridPane.columnIndex="0"
		   GridPane.rowIndex="6"
		   text="PLZ"
		   styleClass="formLabel"/> 		  
	<TextField fx:id="txtPLZ"
			   GridPane.columnIndex="1"
			   GridPane.rowIndex="6" 
			   promptText="PLZ"/>
	<Label GridPane.columnIndex="0"
		   GridPane.rowIndex="7"
		   text="Stadt"
		   styleClass="formLabel"/> 		  
	<TextField fx:id="txtStadt"
			   GridPane.columnIndex="1"
			   GridPane.rowIndex="7" 
			   promptText="Stadt"/>
        <Label GridPane.columnIndex="0"
		   GridPane.rowIndex="8"
		   text="Telefonnummer"
		   styleClass="formLabel"/> 		  
	<TextField fx:id="txtTel"
			   GridPane.columnIndex="1"
			   GridPane.rowIndex="8" 
			   promptText="Telefonnummer"/>
         <Label GridPane.columnIndex="0"
		   GridPane.rowIndex="9"
		   text="E-Mailadresse"
		   styleClass="formLabel"/> 		  
	<TextField fx:id="txtMail"
			   GridPane.columnIndex="1"
			   GridPane.rowIndex="9" 
			   promptText="E-Mailadresse"/>
</GridPane>