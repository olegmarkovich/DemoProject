<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?> 
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.collections.*?>
<?import javafx.scene.paint.*?>


<GridPane 
	id="GridPaneKundenForm" 
	prefWidth="1200.0"
	prefHeight="500.0"
	xmlns:fx="http://javafx.com/fxml/1"
	hgap="10"
	vgap="10"
	fx:controller="demoproject.Formular.KundenController">
	<stylesheets>
		<URL value="@../css/form.css"/>
	</stylesheets>
        
	<Button fx:id="saveButton" 
			GridPane.columnIndex="1" 
			GridPane.rowIndex="13"
			text="Speichern" 
			onAction="#handleSubmitButtonAction"/>
	<Label GridPane.columnIndex="0"
		   GridPane.rowIndex="1"
		   text="Kundenname"
		   styleClass="formLabel"/> 
	<TextField fx:id="newKunde"
                         GridPane.columnIndex="1"
                         GridPane.rowIndex="1" 
                         editable="true" 
                         layoutX="300.0" layoutY="22.0" minWidth="300.0"
                         promptText="Firmen/Kundenname"/>
        <Label GridPane.columnIndex="0"
		   GridPane.rowIndex="2"
		   text="Name"
		   styleClass="formLabel"/>
	<TextField id="txtName" fx:id="txtName"
			   GridPane.columnIndex="1" 
			   GridPane.rowIndex="2"
			   promptText="Name"/>
        <Label GridPane.columnIndex="2"
		   GridPane.rowIndex="2"
		   text="Vorname"
		   styleClass="formLabel"/>   
        <TextField id="txtVorname" fx:id="txtVorname"
			   GridPane.columnIndex="3" 
			   GridPane.rowIndex="2"
			   promptText="Vorname"/>
        <Label GridPane.columnIndex="0"
		   GridPane.rowIndex="3"
		   text="Strasse"
		   styleClass="formLabel"/>   
	<TextField id="txtStrasse" fx:id="txtStrasse"
			   GridPane.columnIndex="1" 
			   GridPane.rowIndex="3"
			   promptText="Strasse"/>
        <Label GridPane.columnIndex="2"
		   GridPane.rowIndex="3"
		   text="Hausnummer"
		   styleClass="formLabel"/>  
	<TextField id="txtHausnummer" fx:id="txtHausnummer"
			   GridPane.columnIndex="3" 
			   GridPane.rowIndex="3"
			   promptText="Hausnummer"/>
	<Label GridPane.columnIndex="0"
		   GridPane.rowIndex="4"
		   text="PLZ"
		   styleClass="formLabel"/> 		  
	<TextField fx:id="txtPLZ" id="txtPLZ"
			   GridPane.columnIndex="1"
			   GridPane.rowIndex="4" 
			   promptText="PLZ"/>
	<Label GridPane.columnIndex="2"
		   GridPane.rowIndex="4"
		   text="Stadt"
		   styleClass="formLabel"/> 		  
	<TextField fx:id="txtStadt" id="txtStadt"
			   GridPane.columnIndex="3"
			   GridPane.rowIndex="4" 
			   promptText="Stadt"/>
	<Label GridPane.columnIndex="0"
		   GridPane.rowIndex="5"
		   text="Telefonnummer1"
		   styleClass="formLabel"/> 		  
	<TextField fx:id="txtTel" id="txtTel"
			   GridPane.columnIndex="1"
			   GridPane.rowIndex="5" 
			   promptText="Telefonnummer 1"/>
	<Label GridPane.columnIndex="2"
		   GridPane.rowIndex="5"
		   text="Telefonnummer 1"
		   styleClass="formLabel"/> 		  
	<TextField fx:id="txtTelToo" id="txtTelToo"
			   GridPane.columnIndex="3"
			   GridPane.rowIndex="5" 
			   promptText="Telefonnummer 2"/>
	<Label GridPane.columnIndex="0"
		   GridPane.rowIndex="6"
		   text="E-Mail 1"
		   styleClass="formLabel"/> 		  
	<TextField fx:id="txtMail" id="txtMail"
			   GridPane.columnIndex="1"
			   GridPane.rowIndex="6" 
			   promptText="E-Mail 1"/>
        <Label GridPane.columnIndex="2"
		   GridPane.rowIndex="6"
		   text="E-Mail 2"
		   styleClass="formLabel"/> 		  
	<TextField fx:id="txtMailToo" id="txtMailToo"
			   GridPane.columnIndex="3"
			   GridPane.rowIndex="6" 
			   promptText="E-Mail 2"/>
</GridPane>